+/ {
+	imx219_clk: imx219-clk {
+		compatible = "fixed-clock";
+		#clock-cells = <0>;
+		clock-frequency = <24000000>;
+	};
+};
+
+&i2c1 {
+	camera@64 {
+		compatible = "sony,imx219";
+		reg = <0x64>;
+		pinctrl-names = "default";
+		pinctrl-0 = <&pinctrl_openrex_mipi>;
+		xclr-gpio = <&gpio2 10 GPIO_ACTIVE_LOW>;
+		clocks = <&imx219_clk>;
+		#address-cells = <1>;
+		#size-cells = <0>;
+
+		port@0 {
+			reg = <0>;
+
+			imx219_out: endpoint {
+				clock-lanes = <0>;
+				clock-noncontinuous;
+				data-lanes = <1 2>;
+				remote-endpoint = <&mipi_csi_from_mipi_sensor>;
+			};
+		};
+	};
+};
+
+&iomuxc {
+	openrex {
+		pinctrl_openrex_mipi: openrex-mipi {
+			fsl,pins = <
+				MX6QDL_PAD_SD4_DAT2__GPIO2_IO10 0x17059
+				MX6QDL_PAD_NANDF_CS2__CCM_CLKO2 0x130b0
+			>;
+		};
+	};
+};
+
+&mipi_csi {
+	status = "okay";
+	port@0 {
+		reg = <0>;
+		mipi_csi_from_mipi_sensor: endpoint {
+			clock-lanes = <0>;
+			clock-noncontinuous;
+			data-lanes = <1 2>;
+			remote-endpoint = <&imx219_out>;
+		};
+	};
+};
